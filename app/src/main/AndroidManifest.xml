<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.atomic.android_boilerplate">

    <application
        android:name=".BoilerPlateApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidBoilerplate"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- We don't recommend doing below. This is just for the boilerplate app.
             We suggest you store these in the local property file for example.
             These are just here as an example. -->
        <meta-data android:name="atomic.apiHost" android:value="hostValue" />
        <meta-data android:name="atomic.apiKey" android:value="apiKey" />
        <meta-data android:name="atomic.environmentId" android:value="envId" />
        <!-- Hard coded for the purposes of this app. You would normally get via
             your authentication process -->
        <meta-data android:name="atomic.requestToken" android:value="token" />

    </application>

</manifest>